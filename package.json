{
  "name": "uikit",
  "version": "1.0.0",
  "description": "UI kit that use lighter html as template renderer",
  "module": "src/index.js",
  "main": "lib/index.js",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "build": "rollup -c",
    "prepare": "npm run build"
  },
  "author": "RÃ©mi Caillot <remicaillot5@gmail.com>",
  "license": "MIT",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ],
      [
        "template-html-minifier",
        {
          "modules": {
            "lighterhtml": [
              "html",
              "svg"
            ]
          },
          "htmlMinifier": {
            "collapseWhitespace": true
          }
        }
      ]
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "lighterhtml": "^0.16.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-plugin-template-html-minifier": "^3.1.0",
    "live-server": "^1.2.1",
    "parcel-bundler": "^1.12.3",
    "rollup": "^1.18.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "sass": "^1.22.9"
  }
}
